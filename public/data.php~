<?php
include_once('../connexionsql.php');
$needle = $_POST['chain'];
$reponse = $bdd->prepare('SELECT Name FROM city WHERE Name REGEXP ?');
$reponse->execute(array('^'.$needle));
if($reponse->rowCount() > 0){
  while ($donnees = $reponse->fetch())
  {
    echo '<i>'.$donnees['Name']."</i>,";
  }
}else echo 'No result';
$reponse->closeCursor();
